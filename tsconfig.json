{
  "compilerOptions": {
    "lib": [
      "ES2016"
    ],
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules"
  ]
}